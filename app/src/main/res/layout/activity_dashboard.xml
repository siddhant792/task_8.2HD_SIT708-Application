<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundColor">

    <TextView
        android:id="@+id/tvWelcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:text="Welcome User"
        android:textColor="@color/textColor"
        android:layout_marginTop="40dp"
        android:layout_centerHorizontal="true"
        android:fontFamily="sans-serif-light"/>

    <TextView
        android:id="@+id/tvDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Improve your command over ${selectedLanguage} with Llama Lingua!"
        android:textSize="16sp"
        android:textColor="@color/textColor"
        android:layout_below="@id/tvWelcome"
        android:layout_marginTop="40dp"
        android:textAlignment="center"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:fontFamily="sans-serif"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnStartConversation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start Conversation"
        android:textColor="@color/buttonTextColor"
        android:background="@drawable/button_background"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:layout_below="@id/tvDescription"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"/>

    <TextView
        android:id="@+id/tvBlogDesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Unlock personalized learning resources tailored to your goals and progress, ensuring efficient language mastery at every step."
        android:textSize="16sp"
        android:textAlignment="center"
        android:textColor="@color/textColor"
        android:layout_below="@id/btnStartConversation"
        android:layout_marginTop="40dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:fontFamily="sans-serif"/>

    <TextView
        android:id="@+id/tvFeaturedBlog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Featured Blog"
        android:textSize="20sp"
        android:textColor="@color/textColor"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/tvBlogDesc"
        android:layout_marginTop="40dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:fontFamily="sans-serif-light"/>

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/viewPager"
        android:paddingStart="80dp"
        android:paddingEnd="80dp"
        android:layout_marginTop="20dp"
        android:layout_below="@id/tvFeaturedBlog"
        android:layout_width="match_parent"
        android:layout_height="250dp" />

</RelativeLayout>
